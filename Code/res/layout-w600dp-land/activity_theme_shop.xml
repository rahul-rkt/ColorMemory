<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/theme_shop_main_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg2"
	tools:context="thakur.rahul.colourmemory.ThemeShopActivity" >

	<LinearLayout
		android:id="@+id/theme_shop_button_layout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_margin="@dimen/big_gap"
		android:gravity="center"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/colour"
			android:layout_width="80dp"
			android:layout_height="100dp"
			android:adjustViewBounds="true"
			android:background="@drawable/card_bg"
			android:contentDescription="@string/theme_shop_button"
			android:onClick="setTheme"
			android:scaleType="center"
			android:tag="@string/colour_theme" />

		<ImageView
			android:id="@+id/red"
			android:layout_width="80dp"
			android:layout_height="100dp"
			android:layout_marginLeft="@dimen/medium_gap"
			android:adjustViewBounds="true"
			android:background="@drawable/red_back"
			android:contentDescription="@string/theme_shop_button"
			android:onClick="setTheme"
			android:scaleType="fitCenter"
			android:tag="@string/red_theme" />

		<ImageView
			android:id="@+id/green"
			android:layout_width="80dp"
			android:layout_height="100dp"
			android:layout_marginLeft="@dimen/medium_gap"
			android:adjustViewBounds="true"
			android:background="@drawable/green_back"
			android:contentDescription="@string/theme_shop_button"
			android:onClick="setTheme"
			android:scaleType="fitCenter"
			android:tag="@string/green_theme" />

		<ImageView
			android:id="@+id/s_digimons"
			android:layout_width="80dp"
			android:layout_height="100dp"
			android:layout_marginLeft="@dimen/medium_gap"
			android:adjustViewBounds="true"
			android:background="@drawable/s_digimons_back"
			android:contentDescription="@string/theme_shop_button"
			android:onClick="setTheme"
			android:scaleType="fitCenter"
			android:tag="@string/digimon_theme" />

		<ImageView
			android:id="@+id/silver"
			android:layout_width="80dp"
			android:layout_height="100dp"
			android:layout_marginLeft="@dimen/medium_gap"
			android:adjustViewBounds="true"
			android:background="@drawable/silver_back"
			android:contentDescription="@string/theme_shop_button"
			android:onClick="setTheme"
			android:scaleType="fitCenter"
			android:tag="@string/silver_theme" />
	</LinearLayout>

	<FrameLayout
		android:id="@+id/fragment_container_pop_up_message"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true" />

</RelativeLayout>